<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoAppointmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Phần đầu (chiếm 2 phần màn hình) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/background_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/background"
                android:scaleType="centerCrop"
                android:clipToOutline="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_arrow_back_24"
                android:textSize="24sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Lịch hẹn"/>
        </FrameLayout>

        <!-- Phần còn lại (chiếm 8 phần màn hình) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:background="#F4F2F2"
            >

            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_full_corner"
                android:layout_marginTop="40sp"
                android:paddingHorizontal="14sp"
                android:paddingTop="30sp"
                android:paddingBottom="10sp"
                android:layout_gravity="top|center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:src="@drawable/heart"/>
                    <Button
                        android:id="@+id/btnBooking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/blue_sky"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20sp"
                        android:layout_marginBottom="20sp"
                        android:text="Đặt hẹn"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Le Pham Binh DZ" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="1. Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="2. Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="3. Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>
                </LinearLayout>
            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>