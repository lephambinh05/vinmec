<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="@color/white"
    tools:context=".BookingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Phần đầu (chiếm 2 phần màn hình) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_arrow_back_24"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:text="Đặt lịch hẹn"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp"
                android:drawableLeft="@drawable/baseline_close_24"/>
        </FrameLayout>

        <!-- Phần còn lại (chiếm 8 phần màn hình) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.5"
            android:background="@color/white"
            android:padding="20sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin người đặt lịch"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
                    android:hint="  Họ tên đầy đủ" />

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="  Ngày sinh"
                    android:drawableLeft="@drawable/baseline_date_range_24"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:ems="10"
                    android:hint="  Số điện thoại"
                    android:drawableLeft="@drawable/baseline_call_24"
                    android:inputType="phone" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính"
                    android:layout_marginTop="5sp"
                    android:textSize="16sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnMale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:text="Nam"
                        android:textSize="18sp"
                        android:clipToOutline="true"
                        android:textColor="@color/blue_sky"
                        android:backgroundTint="#EDEDED"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/btnFemale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Nữ"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:textColor="@color/blue_sky"
                        android:backgroundTint="#EDEDED" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lịch hẹn"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="4dp"
                        android:text="Ngày khám mong muốn"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/tvSelectedDateToday"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#F0F0F0"
                                android:clipToOutline="true"
                                android:textColor="@color/black"
                                android:text="2/10"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Hôm nay"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/tvSelectedDateTomorrow"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#F0F0F0"
                                android:clipToOutline="true"
                                android:textColor="@color/black"
                                android:text="3/10"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Ngày mai"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/tvSelectedDateNextDay"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#F0F0F0"
                                android:clipToOutline="true"
                                android:textColor="@color/black"
                                android:text="4/10"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Ngày kia"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/tvSelectedDateOther"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:backgroundTint="#F0F0F0"
                                android:clipToOutline="true"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:text="+"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Ngày khác"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lý do khám"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        />
                    <EditText
                        android:id="@+id/editTextReason"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="4dp"
                        android:background="#F6F5F5"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ĐẶT HẸN"
                    android:textSize="24sp"
                    android:backgroundTint="@color/blue_sky"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>
